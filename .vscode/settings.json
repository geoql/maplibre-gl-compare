{
  // ===========================================
  // TypeScript Server Configuration
  // ===========================================
  "typescript.tsdk": "node_modules/typescript/lib",
  // ===========================================
  // OXC Extension (oxlint + oxfmt)
  // Docs: https://oxc.rs/docs/guide/usage/linter/editor-integration
  // ===========================================
  "oxc.enable": true,
  "oxc.lint.run": "onType",
  "oxc.trace.server": "off",
  "oxc.fixKind": "safe_fix",
  // ===========================================
  // Formatter Configuration (per language)
  // ===========================================
  // OXC handles: JS, TS, JSX, TSX
  "[javascript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "oxc.oxc-vscode"
  },
  // Use built-in VSCode formatters for non-JS files
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[markdown]": {
    "editor.defaultFormatter": "vscode.markdown-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // ===========================================
  // Editor Behavior
  // ===========================================
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.oxc": "explicit"
  },
  // ===========================================
  // File Associations
  // ===========================================
  "files.associations": {
    ".env*": "dotenv",
    ".oxlintrc.jsonc": "jsonc",
    ".oxfmtrc.jsonc": "jsonc"
  },
  // ===========================================
  // Disable conflicting features
  // ===========================================
  "javascript.format.enable": false,
  "typescript.format.enable": false
}
